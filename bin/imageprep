#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'

require_relative '../lib/imageprep/imagesize'
require_relative '../lib/imageprep/options'

opts = ImagePrep::Options.new(ARGV)

images = Hash.new
opts.images_to_load.each { |imageFileName|
	puts "Processing #{imageFileName}"
	is = ImagePrep::ImageSize.new(imageFileName, opts.outDir)
	images.store(imageFileName, is)
}