require 'rubygems'
require 'bundler/setup'

require_relative '../lib/imageprep/resize'
require_relative '../lib/imageprep/options'

opts = ImagePrep::Options.new(ARGV)

opts.images_to_load.each { |imageFileName|
	puts "Processing #{imageFileName}"
	
	# create the images
	rz = ImagePrep::Resize.new(imageFileName, opts.outDir)
	rz.do_work

	md = ImagePrep::MetaData.new(imageFileName)
	destYamlName = File.join(rz.path_original_dir, md.strip_space_extension + ".yaml")
  File.open(destYamlName, 'w'){ |f| 
    f.write("path: #{rz.path_original_dir}/#{md.strip_space}\n")
    f.write(md.to_octopress) 
  }

}

